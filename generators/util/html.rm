// Markdown formatting helpers

H1[text]: "<h1>" text "</h1>";
H2[text]: "<h2>" text "</h2>";
H3[text]: "<h3>" text "</h3>";
LI[text]: "<li>" text "</li>;
QUOTE[text]: "<blockquote>" text "</blockquote>";
IMG[url, title]: "<img src='" url "' title='" title "' />";
LINK[url, text]: "<a href='" url "' title='" text "'>" text "</a>";
EM[text]: "<em>" text "</em>";
STRONG[text]: "<strong>" text "</strong>";
STRIKE[text]: "<del>" text "</del>";
BR: "<br />";